@page "/"
@layout MinimalLayout
@rendermode InteractiveServer

<!-- Горизонтальный контейнер со страницами -->
<div class="horizontal-pages" id="horizontalPages">

    <!-- Домашняя страница -->
    <section class="page page-home" id="home">
        <div class="background-image-wrapper">
            <img src="/assets/background.svg" alt="Background" class="background-svg-img" />
        </div>
        <div class="page-content home-logo-content">
            <img src="/assets/OTAKUMARKET.svg" alt="Otaku Market Logo" class="otaku-logo" />
            <img src="/assets/DeusFlow.svg" alt="DeusFlow Logo" class="deusflow-logo" />
        </div>
        <button class="nav-btn nav-btn-home" id="btnHome_s0">Home</button>
        <button class="nav-btn nav-btn-shop" id="btnShop_s0">Shop</button>
        <button class="nav-btn nav-btn-zone" id="btnZone_s0">T.Zone</button>
        <button class="nav-btn nav-btn-about" id="btnAbout_s0">About</button> 
    </section>

    <!-- Страница магазина -->
    <section class="page page-shop" id="shop">
        <div class="background-image-wrapper">
            <img src="/assets/background.svg" alt="Background" class="background-svg-img" />
        </div>
        <div class="page-content">
        </div>
        <button class="nav-btn nav-btn-home" id="btnHome_s1">Home</button>
        <button class="nav-btn nav-btn-shop" id="btnShop_s1">Shop</button>
        <button class="nav-btn nav-btn-zone" id="btnZone_s1">T.Zone</button>
        <button class="nav-btn nav-btn-about" id="btnAbout_s1">About</button> 
    </section>

    <!-- Страница зоны -->
    <section class="page page-zone" id="zone">
        <div class="background-image-wrapper">
            <img src="/assets/background.svg" alt="Background" class="background-svg-img" />
        </div>
        <div class="page-content">
        </div>
        <button class="nav-btn nav-btn-home" id="btnHome_s2">Home</button>
        <button class="nav-btn nav-btn-shop" id="btnShop_s2">Shop</button>
        <button class="nav-btn nav-btn-zone" id="btnZone_s2">T.Zone</button>
        <button class="nav-btn nav-btn-about" id="btnAbout_s2">About</button> 
    </section>

    <!-- Страница о нас -->
    <section class="page page-about" id="about">
        <div class="background-image-wrapper">
            <img src="/assets/background.svg" alt="Background" class="background-svg-img" />
        </div>
        <div class="page-content">
        </div>
        <button class="nav-btn nav-btn-home" id="btnHome_s3">Home</button>
        <button class="nav-btn nav-btn-shop" id="btnShop_s3">Shop</button>
        <button class="nav-btn nav-btn-zone" id="btnZone_s3">T.Zone</button>
        <button class="nav-btn nav-btn-about" id="btnAbout_s3">About</button> 
    </section>
</div> 